<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/more_light_gray"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/fragment_reveal_passphrase_instructional_message_vertical_padding"
            android:paddingBottom="@dimen/fragment_reveal_passphrase_instructional_message_vertical_padding"
            android:text="@string/reveal_passphrase_instructional_message"
            style="@style/LearningMachineTextView.RevealPassphrase"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/almost_white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/fragment_reveal_passphrase_current_container_padding_bottom"
            android:paddingTop="@dimen/fragment_reveal_passphrase_current_container_padding_top">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/fragment_reveal_passphrase_current_passphrase_title_bottom"
                android:text="@string/reveal_passphrase_current_title"
                android:textColor="@color/dark_gray"
                style="@style/LearningMachineTextView.RevealPassphrase"/>

            <TextView
                android:id="@+id/current_passphrase_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LearningMachineTextView.RevealPassphrase"/>

        </LinearLayout>

    </LinearLayout>

</layout>