<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/fragment_settings_linear_layout_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.learningmachine.android.app.ui.issuer.IssuerAddActivity">

        <TextView
            android:id="@+id/issuer_add_add_url_info_text_view"
            android:text="@string/add_issuer_info_url_text"
            android:paddingTop="@dimen/fragment_settings_textview_padding_top"
            android:paddingBottom="@dimen/fragment_settings_textview_padding_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/issuer_add_url_edit_text"
            android:hint="@string/issuer_url"
            android:paddingTop="@dimen/fragment_settings_textview_padding_top"
            android:paddingBottom="@dimen/fragment_settings_textview_padding_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/issuer_add_identity_text_view"
            android:text="@string/add_issuer_identity_text"
            android:paddingTop="@dimen/fragment_settings_textview_padding_top"
            android:paddingBottom="@dimen/fragment_settings_textview_padding_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/issuer_add_identity_edit_text"
            android:hint="@string/issuer_add_identity"
            android:paddingTop="@dimen/fragment_settings_textview_padding_top"
            android:paddingBottom="@dimen/fragment_settings_textview_padding_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</layout>
