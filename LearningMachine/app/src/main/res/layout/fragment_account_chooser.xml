<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="@dimen/onboarding_logo_margin_top"
            android:contentDescription="@null"
            android:src="@drawable/ic_splash"/>

        <Button
            android:id="@+id/new_account_button"
            android:layout_width="@dimen/onboarding_button_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/onboarding_choose_button_margin_bottom"
            android:layout_marginTop="@dimen/onboarding_choose_new_account_margin_top"
            android:paddingBottom="@dimen/onboarding_button_padding_vertical"
            android:paddingEnd="@dimen/onboarding_button_padding_horizontal"
            android:paddingStart="@dimen/onboarding_button_padding_horizontal"
            android:paddingTop="@dimen/onboarding_button_padding_vertical"
            android:text="@string/onboarding_new_account"
            style="@style/OnboardingButton.Light"/>

        <Button
            android:id="@+id/existing_account_button"
            android:layout_width="@dimen/onboarding_button_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/onboarding_button_padding_vertical"
            android:paddingEnd="@dimen/onboarding_button_padding_horizontal"
            android:paddingStart="@dimen/onboarding_button_padding_horizontal"
            android:paddingTop="@dimen/onboarding_button_padding_vertical"
            android:text="@string/onboarding_existing_account"/>

    </LinearLayout>

</layout>