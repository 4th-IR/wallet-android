<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/fragment_settings_linear_layout_padding_top"
            tools:context="com.learningmachine.android.app.ui.settings.SettingsActivity">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_passphrase_header"
                style="@style/Settings.Header"/>

            <TextView
                android:id="@+id/settings_reveal_passphrase_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:text="@string/settings_reveal_passphrase"
                style="@style/Settings.TextView"/>

            <TextView
                android:id="@+id/settings_replace_passphrase_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:text="@string/settings_replace_passphrase"
                style="@style/Settings.TextView"/>

            <TextView
                android:id="@+id/settings_about_passphrase_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:text="@string/settings_about_passphrases"
                style="@style/Settings.TextView"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/off_white_background"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:text="@string/settings_about_header"
                style="@style/Settings.Header"/>

            <TextView
                android:id="@+id/settings_privacy_policy_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:text="@string/settings_privacy_policy"
                style="@style/Settings.TextView"/>

        </LinearLayout>

    </ScrollView>

</layout>
