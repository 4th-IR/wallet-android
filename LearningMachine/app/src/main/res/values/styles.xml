<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/LearningMachineTextView</item>
    </style>

    <!-- Base -->

    <style name="LearningMachineTextView" parent="android:style/Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="LearningMachineTextView.Medium" parent="android:style/Widget.TextView">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="LearningMachineDialog" parent="AlertDialog.AppCompat">
    </style>

    <!-- Spec -->

    <style name="Material.Title" parent="LearningMachineTextView.Medium">
        <item name="android:textSize">@dimen/material_title_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/material_title_line_spacing_extra</item>
    </style>

    <style name="Material.Title.Light">
        <item name="android:textColor">@color/black_de</item>
    </style>

    <style name="Material.Title.Dark">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle" parent="LearningMachineTextView">
        <item name="android:textSize">@dimen/text_style_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_style_line_spacing_extra</item>
        <item name="android:textColor">@color/black_de</item>
    </style>

    <style name="Material.Light.Subhead" parent="LearningMachineTextView">
        <item name="android:textSize">@dimen/material_light_subhead_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/material_light_subhead_line_spacing_extra</item>
        <item name="android:textColor">@color/black_8a</item>
    </style>

    <style name="Material.Light.Subhead.Secondary">
        <item name="android:textColor">@color/black_8a</item>
    </style>

    <style name="Material.Light.Subhead.Disabled">
        <item name="android:textColor">@color/black_61</item>
    </style>

    <style name="Material.Desktop.Light.Menu" parent="LearningMachineTextView">
        <item name="android:textSize">@dimen/material_desktop_light_menu_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/material_desktop_light_menu_line_spacing_extra</item>
        <item name="android:textColor">@color/black_de</item>
    </style>

    <style name="Material.Light.Body2" parent="LearningMachineTextView.Medium">
        <item name="android:textSize">@dimen/material_light_body2_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/material_light_body2_line_spacing_extra</item>
        <item name="android:textColor">@color/black_de</item>
    </style>

    <style name="Material.Light.Body1" parent="LearningMachineTextView">
        <item name="android:textSize">@dimen/material_light_body1_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/material_light_body1_line_spacing_extra</item>
        <item name="android:textColor">@color/black_de</item>
    </style>

    <style name="Material.Light.Body1.Secondary">
        <item name="android:textColor">@color/black_8b</item>
    </style>

    <style name="Material.Light.Caption" parent="LearningMachineTextView">
        <item name="android:textSize">@dimen/material_light_caption_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/material_light_caption_line_spacing_extra</item>
        <item name="android:textColor">@color/black_de</item>
    </style>

    <!-- Custom -->

    <style name="Settings.Header" parent="LearningMachineTextView.Medium">
        <item name="android:textSize">@dimen/fragment_settings_header_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/fragment_settings_header_line_spacing_extra</item>
        <item name="android:textColor">@color/brand_green</item>
        <item name="android:paddingStart">@dimen/fragment_add_issuer_linear_layout_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/fragment_add_issuer_linear_layout_padding_horizontal</item>
    </style>

    <style name="Settings.TextView" parent="TextStyle">
        <item name="android:paddingTop">@dimen/fragment_settings_textview_padding_top</item>
        <item name="android:paddingBottom">@dimen/fragment_settings_textview_padding_bottom</item>
        <item name="android:paddingStart">@dimen/fragment_add_issuer_linear_layout_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/fragment_add_issuer_linear_layout_padding_horizontal</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>


</resources>
