<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/LearningMachineTextView</item>

    </style>

    <style name="LearningMachineTextView" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LearningMachineTextView.Settings">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/fragment_settings_passphrase_textsize</item>
        <item name="android:paddingTop">@dimen/fragment_settings_textview_padding_top</item>
        <item name="android:paddingBottom">@dimen/fragment_settings_textview_padding_bottom</item>
    </style>

    <style name="LearningMachineTextView.Settings.Header">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/fragment_settings_header_textsize</item>
        <item name="android:paddingTop">@dimen/fragment_settings_textview_padding_top</item>
    </style>

    <style name="LearningMachineTextView.RevealPassphrase">
        <item name="android:textSize">@dimen/fragment_reveal_passphrase_textsize</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LearningMachineTextView.RevealPassphrase.Title">
        <item name="android:textSize">@dimen/fragment_reveal_passphrase_title_textsize</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
